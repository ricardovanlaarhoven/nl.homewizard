{
  "id": "nl.homewizard",
  "version": "0.1.0",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "Homewizard",
    "nl": "Homewizard"
  },
  "tags": {
    "en": [
      "homewizard",
      "energy",
      "thermostat"
    ]
  },
  "description": {
    "en": "A lightway app for Homewizards energylink and heatlink",
    "nl": "Een lichtgewicht app voor de energylink en heatlink van Homewizard"
  },
  "category": [
    "climate",
    "energy"
  ],
  "author": {
    "name": "Ricardo van Laarhoven",
    "email": "ricardo1994@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Ricardo van Laarhoven",
        "email": "ricardo1994@gmail.com"
      }
    ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "energylink",
      "class": "sensor",
      "capabilities": [
        "meter_power",
        "meter_gas",
        "measure_power.usage",
        "measure_power.netUsage",
        "measure_power.s1Usage",
        "measure_power.s2Usage"
      ],
      "capabilitiesOptions": {
        "measure_power.usage": {
          "title": {
            "en": "Usage",
            "nl": "Verbruik"
          }
        },
        "measure_power.netUsage": {
          "title": {
            "en": "Net usage",
            "nl": "Netto verbruik"
          }
        },
        "measure_power.s1Usage": {
          "title": {
            "en": "Usage S1",
            "nl": "Verbruik S1"
          }
        },
        "measure_power.s2Usage": {
          "title": {
            "en": "Usage S2",
            "nl": "Verbruik S2"
          }
        }
      },
      "name": {
        "en": "Energylink",
        "nl": "Energylink"
      },
      "images": {
        "large": "/drivers/energylink/assets/images/large.jpg",
        "small": "/drivers/energylink/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "heatlink",
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_water_temperature",
        "measure_water_pressure"
      ],
      "name": {
        "en": "Heatlink",
        "nl": "Heatlink"
      },
      "images": {
        "large": "/drivers/heatlink/assets/images/large.jpg",
        "small": "/drivers/heatlink/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "measure_water_pressure": {
      "type": "number",
      "title": {
        "en": "Water pressure",
        "nl": "Waterdruk"
      },
      "insights": true,
      "uiComponent": null,
      "getable": true,
      "setable": false,
      "units": "bar"
    },
    "measure_water_temperature": {
      "type": "number",
      "title": {
        "en": "Water temperature",
        "nl": "Watertemperatuur"
      },
      "insights": true,
      "uiComponent": null,
      "getable": true,
      "setable": false,
      "units": "Â°C"
    }
  }
}